/*
 * Convert an IP number into an address
 */

'use strict';

var path = require('path');
var util_ip = require('../lib/util/ip');


if (!process.argv[2]) {
    console.error('usage: %s <ip number>', path.basename(process.argv[1]));
    process.exit(1);
}

console.log(util_ip.ntoa(process.argv[2]));
